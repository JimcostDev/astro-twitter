---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Timeline">
  <header class="bg-white shadow-md p-4">
    <div class="max-w-screen-md mx-auto flex justify-between items-center">
      <h1 class="text-xl font-bold text-blue-500">Twitter</h1>
      <button
        class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600"
      >
        Perfil
      </button>
    </div>
  </header>

  <main class="max-w-screen-md mx-auto p-4 space-y-4">
    <!-- Tweet 1 -->
    <div class="bg-white p-4 rounded shadow-sm">
      <div class="flex items-center space-x-4 mb-2">
        <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
        <div>
          <h2 class="text-sm font-bold">Usuario1</h2>
          <p class="text-xs text-gray-500">@usuario1</p>
        </div>
      </div>
      <p class="text-gray-700">Este es un tweet de ejemplo.</p>
      <div class="flex space-x-4 mt-2 text-gray-500">
        <button class="hover:text-blue-500">Me gusta</button>
        <button class="hover:text-blue-500">Retweet</button>
        <button class="hover:text-blue-500">Responder</button>
      </div>
    </div>

    <!-- Tweet 2 -->
    <div class="bg-white p-4 rounded shadow-sm">
      <div class="flex items-center space-x-4 mb-2">
        <div class="w-10 h-10 bg-gray-300 rounded-full"></div>
        <div>
          <h2 class="text-sm font-bold">Usuario2</h2>
          <p class="text-xs text-gray-500">@usuario2</p>
        </div>
      </div>
      <p class="text-gray-700">Aqu√≠ va otro tweet de ejemplo.</p>
      <div class="flex space-x-4 mt-2 text-gray-500">
        <button class="hover:text-blue-500">Me gusta</button>
        <button class="hover:text-blue-500">Retweet</button>
        <button class="hover:text-blue-500">Responder</button>
      </div>
    </div>
  </main>

  <footer class="fixed bottom-4 right-4">
    <button
      class="bg-blue-500 text-white py-3 px-6 rounded-full hover:bg-blue-600"
    >
      + Tweet
    </button>
  </footer>
</Layout>
