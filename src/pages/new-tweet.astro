---
import Layout from "../layouts/Layout.astro";
---

<Layout title="New Tweet">
  <header class="bg-white shadow-md p-4">
    <div class="max-w-screen-md mx-auto flex justify-between items-center">
      <h1 class="text-xl font-bold text-blue-500">Nuevo Tweet</h1>
      <button
        class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600"
      >
        Publicar
      </button>
    </div>
  </header>

  <main class="max-w-screen-md mx-auto p-4">
    <textarea
      class="w-full h-40 p-3 border border-gray-300 rounded"
      placeholder="¿Qué estás pensando?"></textarea>
    <div class="flex justify-between items-center mt-2">
      <div class="space-x-2">
        <button class="hover:text-blue-500">Añadir Imagen</button>
        <button class="hover:text-blue-500">Añadir Video</button>
      </div>
    </div>
  </main>
</Layout>
